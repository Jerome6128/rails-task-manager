<h1><%= @task.title %></h1>
<%= link_to 'Edit this task', task_edit_path(@task) %>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p><%= @task.completed %> This task is completed</p>
<% else %>
  <p><%= @task.completed %> This task is not completed yet</p>
<% end %>
<hr>
<%= link_to 'Back to list', tasks_path %>
